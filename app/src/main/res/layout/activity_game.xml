<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_back"
    tools:context=".ui.screens.GameActivity">

    <TextView
        android:id="@+id/tvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/where_is"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivToFind"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/target_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLabel"
        tools:src="@drawable/element1" />

    <ImageView
        android:id="@+id/ivFront1"
        android:layout_width="100dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivFront2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivToFind"
        tools:src="@drawable/element1" />

    <ImageView
        android:id="@+id/ivBack1"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/card_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivFront2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivToFind" />

    <ImageView
        android:id="@+id/ivArrow1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/iv_arrow"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/ivFront1"
        app:layout_constraintEnd_toEndOf="@id/ivFront1"
        app:layout_constraintStart_toStartOf="@id/ivFront1" />

    <ImageView
        android:id="@+id/ivArrow2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/iv_arrow"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/ivFront2"
        app:layout_constraintEnd_toEndOf="@id/ivFront2"
        app:layout_constraintStart_toStartOf="@id/ivFront2" />

    <ImageView
        android:id="@+id/ivArrow3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/iv_arrow"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/ivFront3"
        app:layout_constraintEnd_toEndOf="@id/ivFront3"
        app:layout_constraintStart_toStartOf="@id/ivFront3" />

    <ImageView
        android:id="@+id/ivFront2"
        android:layout_width="100dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivFront3"
        app:layout_constraintStart_toEndOf="@+id/ivFront1"
        app:layout_constraintTop_toTopOf="@id/ivToFind"
        tools:src="@drawable/element2" />

    <ImageView
        android:id="@+id/ivBack2"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/card_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivFront3"
        app:layout_constraintStart_toEndOf="@+id/ivFront1"
        app:layout_constraintTop_toTopOf="@id/ivToFind" />

    <ImageView
        android:id="@+id/ivFront3"
        android:layout_width="100dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivFront2"
        app:layout_constraintTop_toTopOf="@id/ivToFind"
        tools:src="@drawable/element3" />

    <ImageView
        android:id="@+id/ivBack3"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/card_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivFront2"
        app:layout_constraintTop_toTopOf="@id/ivToFind" />

</androidx.constraintlayout.widget.ConstraintLayout>